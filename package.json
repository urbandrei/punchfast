{
  "name": "punchfast",
  "version": "1.0.0",
  "description": "Rewards platform for smaller businesses",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "cd server && NODE_ENV=production node index.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm start",
    "dev:server": "cd server && npm start",
    "build": "cd client && npm run build",
    "install:prod": "npm ci --omit=dev",
    "install:dev": "npm ci",
    "clean": "rm -rf node_modules client/build client/node_modules server/node_modules package-lock.json client/package-lock.json"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
