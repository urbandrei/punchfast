{
  "name": "punchfast",
  "version": "1.0.0",
  "description": "Rewards platform for smaller businesses",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "cd server && NODE_ENV=production node index.js",
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "cd client && yarn start",
    "dev:server": "cd server && yarn start",
    "build": "cd client && yarn build",
    "install:prod": "yarn install --production --frozen-lockfile",
    "install:dev": "yarn install --frozen-lockfile",
    "clean": "rm -rf node_modules client/build client/node_modules server/node_modules yarn-error.log"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
